<aura:component controller="LC_Sing_GenerateCtrFromRFP" implements="force:lightningQuickActionWithoutHeader,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global">
	
    <aura:handler name="init" value="{!this}" action="{!c.checkDisplay}"/>
    
    <aura:attribute name="showSpinner" type="boolean" default="false"/>
	<aura:attribute name="showConfirmation" type="boolean" default="false"/>
    <aura:attribute name="showNotAllowedMsg" type="boolean" default="false"/>
    
    <div class="modal-header slds-modal__header slds-size_1-of-1">
        <h4 class="title slds-text-heading--medium">Generate Draft Contract</h4>
    </div>
    
    <aura:if isTrue="{!v.showConfirmation}">
    
    <!-- MODAL BODY / INPUT FORM -->    
    <div class="slds-align_absolute-center" aura:id="modalbody" id="modalbody">             
        <div class="slds-p-vertical_x-large">Are you sure that you want to generate a draft contract from this event?</div>
    </div>       

    <aura:if isTrue="{!v.showSpinner}">
            <lightning:spinner size="medium" variant="brand" style='background: none;'/>
    </aura:if>

    <div class="slds-text-align_center slds-m-around_x-medium">     
            <lightning:button name="ok" label="OK" variant="brand" onclick="{!c.doInit}"/>
            <lightning:button name="cancel" label="Cancel" onclick="{!c.handleCancel}"/>
    </div>
    </aura:if>
    
    <aura:if isTrue="{!v.showNotAllowedMsg}">
        <div class="slds-align_absolute-center" aura:id="modalbody" id="modalbody">             
        <div class="slds-p-vertical_x-large" style='color:red;'>
            <p>Action cannot be performed. Please ensure that you are part of the sourcing team as buyer and that alteast one awardee is specified on this event</p></div>
    	</div> 
        
        <div class="slds-text-align_center slds-m-around_x-medium">  
        <lightning:button name="Ok" label="OK" onclick="{!c.handleCancel}"/>
        </div>
    </aura:if>
</aura:component>